* {
        margin: 0;
        padding: 0 ;
        list-style-type: none;
        box-sizing: border-box;
      }
      body {
       
        font-family: "Helvetica Neue", sans-serif;
      }
      nav {
        text-align: center;
      }
      .menu {
        display: inline-block;
      }
      .menu > li {
        float: left;
        color: #CACFE2;
        width: 50%;
        height: 40px;
        line-height: 60px;
        cursor: pointer;
        font-size: 20px;
      }
      .sub-menu {
        transform: scale(0);
        transform-origin: top center;
        transition: all 300ms ease-in-out;
      }
      .sub-menu li {
        font-size: 16px;
        background: rgba(0, 0, 0, 1);
        padding: 18px 0;
        color: green;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        transform: scale(0);
        transform-origin: top center;
        transition: all 300ms ease-in-out;
      }
      .sub-menu li:last-child {
        border-bottom: 0;
      }
      .sub-menu li:hover {
        background: white;
      }
      .menu > li:hover .sub-menu li {
        transform: scale(1);
      }
      .menu > li:hover .sub-menu {
        transform: scale(1);
      }
 
